<%- include("header.ejs") %>
<section id="posts">
  <div class="container px-4 py-4">
    <h2 class="pb-2 border-bottom projects-title">Proiecte Actuale</h2>
  </div>
  <div class="album projects-album-wrapper">
    <div class="container">
      <div class="row row-cols-1 row-cols-md-2 g-5 actual-projects-album">
        <% actual.forEach(project => { %>
        <div class="col">
          <div class="card shadow-sm">
            <a class="post-img-link" href="/proiect/<%= project.id %>">
              <img
                src="/images/projects/<%= project.id %>/thumbnail.webp"
                style="object-fit: fill"
              />
            </a>
            <div class="card-body">
              <h2 class="card-text"><%= project.title %></h2>
              <div class="d-flex justify-content-between align-items-center">
                <div class="project-buttons">
                  <button
                    type="button"
                    class="btn btn-primary-pink-round"
                    onclick="window.location.href='/cum-pot-ajuta#donez'"
                  >
                    Doneaza
                  </button>
                  <button
                    type="button"
                    class="btn btn-secondary-pink"
                    onclick="window.location.href='/cum-pot-ajuta'"
                  >
                    Cum poți ajuta
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
